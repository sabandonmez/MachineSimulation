 @model Machine

<div class="text-center">
    <div class="display-6">
        Güncelle
    </div>
</div>

<div class="form-style">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="operationName" class="form-label">Select Operation Name:</label>
            <select id="operationName" name="operationNameId" class="form-control rounded" required style="width: 100%;">
                <!-- Operation Name options will be populated here by JavaScript -->
            </select>
        </div>

        <div class="form-group">
            <label for="modbusIp" class="form-label">Modbus IP:</label>
            <input type="number" id="modbusIp" name="modbusIp" class="form-control rounded" required style="width: 100%;">
        </div>

        <div class="form-group my-3">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Ekle
            </button>
            <a asp-action="Index" class="btn btn-warning">
                <i class="fa fa-list"></i>
                Operasyonlar
            </a>
        </div>
    </form>
</div>