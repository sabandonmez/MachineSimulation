@model MachineSimulation.App.Areas.Admin.Models.ModbusAddressViewModel

<link rel="stylesheet" href="~/css/admin-home.css" asp-append-version="true" />

<div class="text-center">
    <div class="display-6">
        Kriter Verisi Modbus Adresi Oluştur
    </div>
</div>

<div class="form-style">
    <form method="post" asp-action="AddAddress">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="NewAddress.Address">Adres</label>
            <input type="number" class="form-control" asp-for="NewAddress.Address" required />
        </div>

        <div class="form-group">
            <label asp-for="NewAddress.MachineId">Makine</label>
            <select asp-for="NewAddress.MachineId" class="form-control">
                @foreach (var machine in Model.Machines)
                {
                    <option value="@machine.Id">@machine.MachineName</option>
                }
            </select>
        </div>

        <div class="form-group my-3">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Ekle
            </button>
            <a asp-action="Index" class="btn btn-warning">
                <i class="fa fa-list"></i>
                Geri
            </a>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
