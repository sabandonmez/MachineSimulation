@model IEnumerable<Machine>
<link rel="stylesheet" href="~/css/admin-home.css" asp-append-version="true" />

<div class="display-6 text-center">
    <h1>Makineler</h1>

    <div class="d-flex justify-content-end my-3">
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="fa fa-plus"></i>
            Oluştur
        </a>
    </div>

    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead class="thead-all">
                <tr>
                    <th>Makine</th>
                    <th>Resim Url</th>
                    <th>ModbusId</th>
                    <th>Değişiklikler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Machine mchn in Model)
                {
                    <tr>
                        <td>@mchn.MachineName</td>
                        <td>@mchn.ImageUrl</td>
                        <td>@mchn.ModbusId</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-warning" asp-action="Update" asp-controller="Machine" asp-route-id="@mchn.Id">
                                    <i class="fa fa-edit"></i>
                                    <span>Güncelle</span>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Machine" asp-route-id="@mchn.Id">
                                    <i class="fa fa-trash"></i>
                                    <span>Sil</span>
                                </a>
                                <a class="btn btn-info" target="_blank" asp-area="" asp-action="Get" asp-controller="Machine" asp-route-id="@mchn.Id">
                                    <i class="fa fa-search"></i>
                                    <span>Web</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
