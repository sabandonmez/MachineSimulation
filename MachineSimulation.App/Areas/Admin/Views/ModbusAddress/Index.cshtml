@model MachineSimulation.App.Areas.Admin.Models.ModbusAddressViewModel

<link rel="stylesheet" href="~/css/admin-home.css" asp-append-version="true" />

<div class="display-6 text-center">
    <h1>Kalite Kriter Verisi Adresleri</h1>

    <div class="d-flex justify-content-end my-3">
        <a asp-action="AddAddress" class="btn btn-outline-success">
            <i class="fa fa-plus"></i>
            Oluştur
        </a>
    </div>

    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead class="thead-all">
                <tr>
                    <th>Adres</th>
                    <th>Değişiklikler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var address in Model.Addresses)
                {
                    <tr>
                        <td>@address.Address</td>
                        <td>
                            <div class="btn-group">
                                <form method="post" asp-action="DeleteAddress" asp-route-id="@address.Id">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                        Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
