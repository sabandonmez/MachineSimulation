@model IEnumerable<IdentityUser>
<link rel="stylesheet" href="~/css/admin-home.css" asp-append-version="true" />

<div class="display-6 text-center">
    <h1>Kullanıcılar</h1>

    <div class="d-flex justify-content-end my-3">
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="fa fa-plus"></i>
            Oluştur
        </a>
    </div>

    <div class="table-container">

        <table class="table table-striped table-hover">
            <thead class="thead-all">
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Değişiklikler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@user.UserName">
                                    <i class="fa fa-edit"></i>
                                    <span>Güncelle</span>
                                </a>
                                <a class="btn btn-info" asp-action="ResetPassword" asp-route-id="@user.UserName">
                                    <i class="fa fa-key"></i>
                                    <span>Şifre Yenile</span>
                                </a>
                                <form method="post" asp-action="DeleteOneUser" id="delete-form-@user.UserName" style="display:inline;">
                                    <input type="hidden" name="UserName" value="@user.UserName">
                                    <a href="javascript:;" class="btn btn-danger delete-button" onclick="document.getElementById('delete-form-@user.UserName').submit();">
                                        <i class="fa fa-trash"></i>
                                        <span>Sil</span>
                                    </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>